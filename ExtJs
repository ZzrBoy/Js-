viewConfig:{
				plugins:{
					ptype:'gridviewdragdrop',
					dragText:'拖动进行排序'
				},
				listeners:{
					drop:function(node,data,dropRec,dropPosition){
						var store=data.view.store;
						var option=new Array("A","B","C","D","E","F");
						for(var i=0;i<store.getCount();i++){
							store.getAt(i).set('accAnsOption',option[i]);
							//store.commitChanges();
						}
						data.view.refresh();
					}
				}
			},
